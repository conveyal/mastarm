{
  "extends": [
    "standard",
    "standard-jsx",
    "plugin:flowtype/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "flowtype",
    "flowtype-errors",
    "jsx-a11y"
  ],
  "rules": {
    "flowtype-errors/show-errors": "error",
    "no-magic-numbers": ["warn", {
      "detectObjects": true,
      "ignore": [-1, 0, 1],
      "ignoreArrayIndexes": true
    }],
    "prefer-const": ["warn", {
      "destructuring": "all",
      "ignoreReadBeforeAssign": false
    }]
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
